<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="TotalProcessing\TPCARDS\API\TotalProcessingManagementInterface" type="TotalProcessing\TPCARDS\Model\API\TotalProcessingManagement" />
    <preference for="TotalProcessing\TPCARDS\API\RemoteXMLInterface" type="TotalProcessing\TPCARDS\Model\API\RemoteXML" />
    <type name="TotalProcessing\TPCARDS\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="TotalProcessing\TPCARDS\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">totalprocessingLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="exception" xsi:type="object">TotalProcessing\TPCARDS\Logger\Handler\Critical</item>
                <item name="debug" xsi:type="object">TotalProcessing\TPCARDS\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\Sales\Model\Order" type="TotalProcessing\TPCARDS\Model\Order" />
</config>
